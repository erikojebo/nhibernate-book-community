<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="NHibernateBookCommunity.Domain"
                   namespace="NHibernateBookCommunity.Domain.Entities">

  <class name="User" table="[User]">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="Username" />
    <property name="Password" />
    <property name="LastLoginDate" />

    <bag name="Reviews" cascade="all" access="field.camelcase-underscore">
      <key column="UserId" />
      <one-to-many class="Review" />
    </bag>
  </class>

</hibernate-mapping>